{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" }
      },
      "required": ["uid", "email"]
    },
    "Transaction": {
      "title": "Transaction",
      "type": "object",
      "description": "Represents a debt or a loan.",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user who owns this transaction." },
        "type": { "type": "string", "enum": ["debt", "loan"] },
        "creditor": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "phone": { "type": ["string", "null"] },
            "email": { "type": ["string", "null"], "format": "email" }
          },
          "required": ["name"]
        },
        "accountNumber": { "type": ["string", "null"] },
        "paymentUrl": { "type": ["string", "null"], "format": "uri" },
        "amount": { "type": "number" },
        "originalAmount": { "type": ["number", "null"], "description": "The original principal amount, especially for loans." },
        "category": { "type": ["string", "null"], "enum": ["דיור", "רכב", "לימודים", "עסק", "אישי", "אחר"] },
        "interestRate": { "type": ["number", "null"] },
        "interestType": { "type": ["string", "null"], "enum": ["קבועה", "משתנה"] },
        "lateFee": { "type": ["number", "null"] },
        "collateral": { "type": ["string", "null"] },
        "status": { "type": "string", "enum": ["active", "paid", "late"] },
        "isAutoPay": { "type": "boolean" },
        "paymentFrequency": { "type": ["string", "null"], "enum": ["יומי", "שבועי", "דו-שבועי", "חודשי", "רבעוני", "שנתי"] },
        "priority": { "type": ["string", "null"], "enum": ["נמוכה", "בינונית", "גבוהה"] },
        "tags": { "type": ["string", "null"] },
        "startDate": { "type": ["string", "null"], "format": "date", "description": "The date the transaction was initiated." },
        "dueDate": { "type": "string", "format": "date" },
        "paymentType": { "type": "string", "enum": ["single", "installments"] },
        "numberOfPayments": { "type": ["number", "null"], "description": "The total number of installments for the loan." },
        "nextPaymentAmount": { "type": ["number", "null"] },
        "paymentMethod": { "type": ["string", "null"], "description": "The method used for payments.", "enum": ["Bank Transfer", "Credit Card", "Cash", "Other"] },
        "description": { "type": ["string", "null"], "description": "Notes or details about the transaction." }
      },
      "required": ["userId", "type", "creditor", "amount", "status", "dueDate", "paymentType", "isAutoPay"]
    },
    "Budget": {
      "title": "Budget",
      "type": "object",
      "description": "Represents a monthly budget for a user.",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user who owns this budget." },
        "month": { "type": "string", "description": "The month of the budget in YYYY-MM format." },
        "categoryBudgets": {
          "type": "array",
          "description": "An array of budget allocations for different categories.",
          "items": {
            "type": "object",
            "properties": {
              "category": { "type": "string", "enum": ["דיור", "רכב", "לימודים", "עסק", "אישי", "אחר"] },
              "amount": { "type": "number" }
            },
            "required": ["category", "amount"]
          }
        }
      },
      "required": ["userId", "month", "categoryBudgets"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information. Only the authenticated user can access their own profile."
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Stores transaction (debt or loan) information for a specific user. Only the user can access their own data."
    },
    "/users/{userId}/budgets/{month}": {
      "schema": { "$ref": "#/entities/Budget" },
      "description": "Stores a user's monthly budget. The document ID is the month in 'YYYY-MM' format."
    }
  }
}
