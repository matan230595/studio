{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" }
      },
      "required": ["uid", "email"]
    },
    "Transaction": {
      "title": "Transaction",
      "type": "object",
      "description": "Represents a debt or a loan.",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user who owns this transaction." },
        "type": { "type": "string", "enum": ["debt", "loan"] },
        "creditor": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "avatar": { "type": "string", "description": "A reference to a placeholder image ID or a data URI of a generated image." }
          },
          "required": ["name", "avatar"]
        },
        "amount": { "type": "number" },
        "interestRate": { "type": "number" },
        "status": { "type": "string", "enum": ["active", "paid", "late"] },
        "dueDate": { "type": "string", "format": "date" },
        "paymentType": { "type": "string", "enum": ["single", "installments"] },
        "nextPaymentAmount": { "type": "number" }
      },
      "required": ["userId", "type", "creditor", "amount", "status", "dueDate", "paymentType"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information. Only the authenticated user can access their own profile."
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Stores transaction (debt or loan) information for a specific user. Only the user can access their own data."
    }
  }
}
