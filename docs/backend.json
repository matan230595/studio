{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" }
      },
      "required": ["uid", "email"]
    },
    "Transaction": {
      "title": "Transaction",
      "type": "object",
      "description": "Represents a debt or a loan.",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user who owns this transaction." },
        "type": { "type": "string", "enum": ["debt", "loan"] },
        "creditor": {
          "type": "object",
          "properties": {
            "name": { "type": "string" }
          },
          "required": ["name"]
        },
        "amount": { "type": "number" },
        "originalAmount": { "type": ["number", "null"], "description": "The original principal amount, especially for loans." },
        "interestRate": { "type": ["number", "null"] },
        "status": { "type": "string", "enum": ["active", "paid", "late"] },
        "startDate": { "type": ["string", "null"], "format": "date", "description": "The date the transaction was initiated." },
        "dueDate": { "type": "string", "format": "date" },
        "paymentType": { "type": "string", "enum": ["single", "installments"] },
        "numberOfPayments": { "type": ["number", "null"], "description": "The total number of installments for the loan." },
        "nextPaymentAmount": { "type": ["number", "null"] },
        "paymentMethod": { "type": ["string", "null"], "description": "The method used for payments.", "enum": ["Bank Transfer", "Credit Card", "Cash", "Other"] },
        "description": { "type": ["string", "null"], "description": "Notes or details about the transaction." }
      },
      "required": ["userId", "type", "creditor", "amount", "status", "dueDate", "paymentType"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information. Only the authenticated user can access their own profile."
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Stores transaction (debt or loan) information for a specific user. Only the user can access their own data."
    }
  }
}
